{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "rootDir": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vitest/globals", "node"]
  },
  "include": ["src", "__tests__"],
  "exclude": ["rollup.config.ts"],
  "ts-node": { "esm": true }
}
